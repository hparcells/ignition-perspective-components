{
    "type": "object",
    "additionalProperties": false,
    "required": [
        "month",
        "year"
    ],
    "properties": {
        "month": {
            "type": "number",
            "description": "The year of the month to display.",
            "default": 7
        },
        "year": {
            "type": "number",
            "description": "The month to display.",
            "default": 2025
        },
        "data": {
            "type": "array",
            "description": "Events to show on the calendar..",
            "default": [],
            "items": {
                "type": "object",
                "description": "Event object.",
                "properties": {
                    "date": {
                        "type": "date",
                        "description": "Event date.",
                        "default": ""
                    },
                    "title": {
                        "type": "string",
                        "description": "The title of the event.",
                        "default": "Event"
                    },
                    "color": {
                        "type": "string",
                        "description": "Optional. Event color, either HTML colors, hex, CSS, or named colors.",
                        "format": "color",
                        "enum": [
                            "lavender",
                            "sage",
                            "grape",
                            "flamingo",
                            "banana",
                            "tangerine",
                            "peacock",
                            "graphite",
                            "blueberry",
                            "basil",
                            "tomato"
                        ],
                        "default": ""
                    },
                    "fontColor": {
                        "type": "string",
                        "description": "Optional. Event font color, either HTML colors, hex, CSS, or named colors.",
                        "format": "color",
                        "default": ""
                    }
                }
            }
        },
        "draggableEvents": {
            "type": "boolean",
            "description": "If events can be dragged and dropped.",
            "default": false
        },
        "style": {
            "$ref": "urn:ignition-schema:schemas/style-properties.schema.json",
            "default": {
                "classes": ""
            }
        }
    }
}
