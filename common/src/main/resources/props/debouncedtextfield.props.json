{
    "type": "object",
    "additionalProperties": false,
    "required": [
        "text",
        "debouncedText",
        "delay"
    ],
    "properties": {
        "text": {
            "type": "string",
            "description": "Text to display.",
            "default": ""
        },
        "debouncedText": {
            "type": "string",
            "description": "Debounced version of the text.",
            "default": ""
        },
        "placeholder": {
            "type": "string",
            "description": "Placeholder text.",
            "default": ""
        },
        "delay": {
            "type": "number",
            "description": "The debounce delay in milliseconds. After this amount of time, the latest value is used.",
            "default": 300
        },
        "disabled": {
            "type": "boolean",
            "default": false,
            "description": "If the input is disabled."
        },
        "style": {
            "$ref": "urn:ignition-schema:schemas/style-properties.schema.json",
            "default": {
                "classes": ""
            }
        }
    }
}
