{
    "type": "object",
    "additionalProperties": false,
    "required": [
        "direction",
        "view"
    ],
    "properties": {
        "direction": {
            "type": "string",
            "enum": [
                "row",
                "column"
            ],
            "description": "In which order should the instances be repeated.",
            "default": "column"
        },
        "instances": {
            "type": "array",
            "description": "Objects to be passed to the view as parameters.",
            "default": []
        },
        "view": {
            "type": "string",
            "description": "Path to the view that will be draggable.",
            "format": "view-path",
            "default": ""
        },
        "instanceStyle": {
            "$ref": "urn:ignition-schema:schemas/style-properties.schema.json",
            "default": {
                "classes": ""
            }
        },
        "instancePosition": {
            "type": "object",
            "description": "Position of each instance.",
            "default": {
                "grow": 1,
                "shrink": 1,
                "basis": 0
            }
        },
        "style": {
            "$ref": "urn:ignition-schema:schemas/style-properties.schema.json",
            "default": {
                "classes": "",
                "gap": "4px",
                "flex-wrap": "nowrap"
            }
        }
    }
}
