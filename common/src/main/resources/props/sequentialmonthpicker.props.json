{
    "type": "object",
    "additionalProperties": false,
    "required": [
        "month",
        "year"
    ],
    "properties": {
        "month": {
            "type": "number",
            "description": "The year of the month to display.",
            "default": 7
        },
        "year": {
            "type": "number",
            "description": "The month to display.",
            "default": 2025
        },
        "preventPast": {
            "type": "boolean",
            "description": "If true, prevents the user from selecting a month in the past.",
            "default": false 
        },
        "preventFuture": {
            "type": "boolean",
            "description": "If true, prevents the user from selecting a month in the future.",
            "default": false 
        },
        "style": {
            "$ref": "urn:ignition-schema:schemas/style-properties.schema.json",
            "default": {
                "classes": ""
            }
        }
    }
}
